{% comment %}
  Este snippet muestra todas las colecciones disponibles en el sitio
{% endcomment %}
<div class="widget widget-collections-list">
  <div class="widget-title">
    <h2 class="mb-0 title14 font-bold dosis-font text-uppercase">Colecciones Disponibles</h2>
  </div>
  <div class="collections-list">
    <ul class="list-unstyled mb-0">
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' or collection.handle == 'all' %}
          <li class="py-2 border-bottom">
            <a href="{{ collection.url }}" class="d-block">
              <strong>{{ collection.title }}</strong>
              <span class="text-muted small ml-2">({{ collection.all_products_count }} productos)</span>
              <br>
              <small class="text-muted">Handle: {{ collection.handle }}</small>
            </a>
          </li>
        {% endunless %}
      {% endfor %}
    </ul>
  </div>
</div>

