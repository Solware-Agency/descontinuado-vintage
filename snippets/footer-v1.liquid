<footer class="footer-v1">
  <div class="footer-container">

    <!-- Izquierda: Logo grande -->
<div class="footer-col footer-logo">
  {% if section.settings.footer_logo_svg != blank %}
    <div class="footer-logo-svg">{{ section.settings.footer_logo_svg }}</div>
  {% elsif section.settings.footer_logo != blank %}
    <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="{{ shop.name }}" class="footer-logo-img">
  {% else %}
    <img src="{{ 'LOGO-BLANCO.png' | asset_url }}" alt="{{ shop.name }}" class="footer-logo-img">
  {% endif %}
</div>


    <!-- Centro: Quick Links -->
    <div class="footer-col footer-links">
      <ul class="links-column">
        <li><a href="/collections/all">Shop All</a></li>
        <li><a href="/collections/best-sellers">Best Sellers</a></li>
        <li><a href="/pages/contact">Contact Us</a></li>
        <li><a href="/pages/faq">FAQ</a></li>
        <li><a href="/pages/care-guide">Care Guide</a></li>
      </ul>
    </div>

    <!-- Derecha: Policies -->
    <div class="footer-col footer-policies">
      <ul class="links-column">
        <li><a href="/pages/shipping">Shipping</a></li>
        <li><a href="/pages/privacy-policy">Privacy Policy</a></li>
        <li><a href="/pages/terms-and-conditions">Terms & Conditions</a></li>
        <li><a href="/pages/returns">Returns & Exchanges</a></li>
      </ul>
    </div>

    <!-- Derecha: Newsletter -->
    <div class="footer-col footer-newsletter">
      <h3>SUBSCRIBE AND GET 10% OFF YOUR FIRST ORDER</h3>
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <p class="form-success">Thank you for subscribing!</p>
        {% endif %}
        {{ form.errors | default_errors }}
        <input type="email" name="contact[email]" placeholder="email address" required>
        <input type="hidden" name="contact[tags]" value="newsletter">
        <label class="checkbox-container">
          <input type="checkbox" name="agree" required>
          <span>I agree to receive emails from Descontinuado.</span>
        </label>
        <button type="submit" class="footer-button">SUBSCRIBE</button>
      {% endform %}
    </div>

  </div>

  <!-- Franja inferior: copyright + desarrollado por -->
  <div class="footer-bottom">
    <p>© 2025 Descontinuado. All rights reserved. — Developed by <a href="https://solware.agency" target="_blank">Solware</a></p>
  </div>
</footer>

<style>
  /* Fuentes */
  @font-face {
    font-family: 'D-DIN';
    src: url('{{ "D-DIN.woff2" | asset_url }}') format('woff2'),
         url('{{ "D-DIN.woff" | asset_url }}') format('woff'),
         url('{{ "D-DIN.otf" | asset_url }}') format('opentype');
    font-weight: 400; font-style: normal; font-display: swap;
  }
  @font-face {
    font-family: 'Chivo-Medium';
    src: url('{{ "Chivo-Medium.woff2" | asset_url }}') format('woff2'),
         url('{{ "Chivo-Medium.woff" | asset_url }}') format('woff'),
         url('{{ "Chivo-Medium.ttf" | asset_url }}') format('truetype');
    font-weight: 500; font-style: normal; font-display: swap;
  }

  /* Contenedor general */
  .footer-v1 {
    background-color: #000;
    color: #fff;
    padding: 70px 5% 20px;
    font-family: 'D-DIN', sans-serif;
  }

  .footer-container {
    display: grid;
    grid-template-columns: 35% 1fr 1fr; /* Logo, Quick Links, Policies */
    gap: 50px;
    max-width: 1300px;
    margin: 0 auto 50px;
    align-items: start;
  }
  .footer-newsletter {
    grid-column: 1 / -1; /* Ocupa todo el ancho debajo de las 3 columnas */
    margin-top: 20px;
  }

  /* Logo */
  .footer-logo .footer-logo-img,
  .footer-logo .footer-logo-svg {
    width: 100%;
    height: auto;
    display: block;
    max-width: none;
  }

  /* Links en columna única */
  .footer-links,
  .footer-policies {
    display: flex;
    flex-direction: column;
  }
  .links-column {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }
  .links-column li {
    margin-bottom: 6px;
  }
  .links-column a {
    color: #fff;
    font-size: 13px;
    letter-spacing: 0.5px;
    text-decoration: none;
    transition: opacity 0.3s ease;
    font-family: 'D-DIN', sans-serif;
  }
  .links-column a:hover {
    opacity: 0.7;
  }

  /* Newsletter */
  .footer-newsletter h3 {
    font-family: 'Chivo-Medium', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #fff;
    margin-bottom: 15px;
  }
  .footer-newsletter .form-success {
    color: #fff;
    font-size: 12px;
    margin-bottom: 10px;
    font-family: 'D-DIN', sans-serif;
  }
  .footer-newsletter .errors {
    color: #ff6b6b;
    font-size: 12px;
    margin-bottom: 10px;
    font-family: 'D-DIN', sans-serif;
  }
  .footer-newsletter form input[type="email"] {
    width: 100%;
    background: transparent;
    border: 1px solid #fff;
    padding: 10px 12px;
    font-size: 13px;
    color: #fff;
    margin-bottom: 10px;
    font-family: 'D-DIN', sans-serif;
  }
  .footer-newsletter .checkbox-container {
    display: flex;
    align-items: flex-start;
    font-size: 12px;
    margin-bottom: 15px;
    color: #aaa;
    font-family: 'D-DIN', sans-serif;
    line-height: 1.4;
  }
  .footer-newsletter .checkbox-container input {
    margin-right: 8px;
    margin-top: 2px;
  }
  .footer-button {
    width: 100%;
    background: #fff;
    color: #000;
    border: none;
    padding: 10px 0;
    font-family: 'D-DIN', sans-serif;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .footer-button:hover {
    background: #e4e4e4;
  }

  /* Franja inferior */
  .footer-bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    text-align: center;
    padding-top: 15px;
  }
  .footer-bottom p {
    font-size: 12px;
    color: #aaa;
    margin: 0;
    font-family: 'D-DIN', sans-serif;
  }
  .footer-bottom p a {
    color: #fff;
    font-weight: 500;
    text-decoration: none;
    font-family: 'D-DIN', sans-serif;
  }
  .footer-bottom p a:hover {
    text-decoration: underline;
  }

  /* Responsive Tablet y Mobile */
  @media (max-width: 991px) {
    .footer-v1 {
      padding: 50px 0 20px;
    }
    .footer-container {
      display: flex;
      flex-direction: column;
      gap: 40px;
      padding: 0 4%;
    }
    .footer-newsletter {
      order: 1;
      grid-column: auto;
      margin-top: 0;
      width: calc(100% + 8%);
      margin-left: -4%;
      padding: 0 4%;
      box-sizing: border-box;
    }
    .footer-links {
      order: 2;
    }
    .footer-links .links-column {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      text-align: left;
    }
    .footer-policies {
      order: 3;
    }
    .footer-logo {
      order: 4;
      display: flex;
      justify-content: center;
    }
    .footer-policies {
      text-align: center;
    }
  }
  @media (max-width: 600px) {
    .footer-v1 {
      padding: 40px 0 20px;
    }
    .footer-container {
      gap: 30px;
      padding: 0 3%;
    }
    .footer-newsletter {
      width: calc(100% + 6%);
      margin-left: -3%;
      padding: 0 3%;
    }
    .footer-newsletter form input[type="email"] {
      font-size: 12px;
      padding: 12px;
    }
    .footer-button {
      padding: 12px 0;
      font-size: 12px;
      width: 100%;
    }
    .footer-newsletter .checkbox-container {
      font-size: 11px;
    }
    .footer-links .links-column {
      gap: 15px;
    }
    .footer-bottom p {
      font-size: 11px;
    }
  }
</style>
