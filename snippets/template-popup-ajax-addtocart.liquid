<div class="error-popup engo-popup engoc_hide_mobile">
  <div class="overlay-addcart"></div>
  <div class="popup-inner content">
    <div class="error-message"></div>
  </div>
</div>
<div class="product-popup engo-popup">
  <div class="overlay-addcart"></div>
  <div class="content">
    <div id="react-addtocart-popup"></div>
  </div>  
</div>
<script>
  // Listener para overlay del popup React (sin bot√≥n X, solo overlay para cerrar si es necesario)
  $(document).on('click', '.product-popup .overlay-addcart', function(e) {
    e.preventDefault();
    e.stopPropagation();
    if (typeof window.closeAddToCartPopup === 'function') {
      window.closeAddToCartPopup();
    } else {
      $(".product-popup").removeClass('active');
    }
  });
</script>
