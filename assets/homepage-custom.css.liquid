/* ============================================
   HERO BANNER
   ============================================ */

/* --- Contenedor general que fuerza ancho completo --- */
.hero-banner-wrapper {
  overflow: hidden;
}

.hero-banner {
  position: relative;
  width: 100%;
  min-height: 80vh;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #fff;
}

/* --- Texto y bot칩n centrados --- */
.hero-content {
  z-index: 2;
  padding: 0 20px;
}

.hero-subtitle {
  font-family: 'DIN-Light', 'D-DIN', sans-serif;
  font-size: clamp(20px, 3vw, 26px);
  font-style: normal;
  font-weight: 300;
  margin-bottom: 25px;
  letter-spacing: 0.5px;
  color: #fff;
}

.hero-button {
  display: inline-block;
  border: 1px solid #fff;
  padding: 10px 24px;
  font-size: 12px;
  font-family: 'D-DIN', sans-serif;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
  cursor: pointer;
}

.hero-button:hover {
  background-color: #fff;
  color: #000;
}

/* --- Responsive --- */
@media (max-width: 768px) {
  .hero-banner {
    min-height: 70vh;
    background-position: top center;
  }

  .hero-subtitle {
    font-size: 20px;
    margin-bottom: 20px;
  }

  .hero-button {
    padding: 9px 22px;
    font-size: 11px;
  }
}

@media (max-width: 480px) {
  .hero-banner {
    min-height: 60vh;
  }

  .hero-subtitle {
    font-size: 18px;
  }
}

/* ============================================
   SERVICES ICONS
   ============================================ */

.custom-services {
  background-color: #F1F2F2 !important;
  padding: 80px 0 !important;
  text-align: center !important;
}

.services-container {
  display: grid !important;
  grid-template-columns: repeat(3, 1fr) !important;
  gap: 80px !important;
  justify-items: center !important;
  align-items: stretch !important;
  max-width: 1100px !important;
  margin: 0 auto !important;
  padding: 0 40px !important;
}

/* Carrusel - oculto por defecto (solo visible en mobile) */
.services-carousel {
  display: none !important;
  max-width: 1100px !important;
  margin: 0 auto !important;
  padding: 0 20px !important;
}

.service-item {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  text-align: center !important;
  transition: transform 0.3s ease, opacity 0.3s ease !important;
}

.service-item:hover {
  transform: translateY(-6px) !important;
  opacity: 0.9 !important;
}

/* --- Wrapper para igualar alturas de 칤conos --- */
.service-icon-wrapper {
  height: 80px !important; /* 游녣 fija un 치rea igual para todos */
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-bottom: 20px !important;
}

.service-icon {
  width: 60px !important;
  height: auto !important;
}

.service-item h3 {
  font-family: 'D-DIN', 'DIN', sans-serif !important;
  font-size: 18px !important;
  font-weight: 700 !important;
  letter-spacing: 1px !important;
  color: #231f20 !important;
  text-transform: uppercase !important;
  margin: 0 !important;
  line-height: 1.2 !important;
}

/* 游댲 Tablet */
@media (max-width: 992px) {
  .services-container {
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 60px !important;
    padding: 0 30px !important;
  }

  .service-icon-wrapper {
    height: 70px !important;
  }
}

/* 游댳 M칩vil */
@media (max-width: 600px) {
  .custom-services {
    padding: 60px 0 !important;
  }

  /* Ocultar grid en mobile */
  .services-container {
    display: none !important;
  }

  /* Mostrar carrusel en mobile */
  .services-carousel {
    display: block !important;
  }

  .services-carousel .service-item {
    padding: 0 10px !important;
  }

  .service-icon-wrapper {
    height: 60px !important;
    margin-bottom: 15px !important;
  }

  .service-item h3 {
    font-size: 13px !important;
    letter-spacing: 0.8px !important;
    font-family: 'D-DIN', 'DIN', sans-serif !important;
  }
}

/* ============================================
   GET INSPIRED
   ============================================ */

/* === SECCI칍N PRINCIPAL === */
.get-inspired {
  background-color: #000;
  padding: 100px 0; /* espacio igual arriba y abajo */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.get-inspired-title {
  font-family: 'Galgo', sans-serif;
  font-size: 80px;
  color: #fff;
  letter-spacing: 2px;
  text-transform: uppercase;
  line-height: 1.1;
  margin: 0; /* elimina m치rgenes del H2 */
  padding: 0;
}

/* === GRID DE IM츼GENES === */
.get-inspired-grid {
  display: none !important; /* Oculto en todos los tama침os, usando carrusel */
  grid-template-columns: repeat(3, 1fr);
  gap: 25px;
  max-width: 1100px;
  margin: 0 auto;
  padding: 60px 30px 0; /* espacio superior para separar del t칤tulo */
}

/* Carrusel - visible en todos los tama침os */
.get-inspired-carousel {
  display: block !important;
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 30px 0;
  width: 100%;
  overflow-y: hidden;
  overflow-x: hidden;
}

.inspired-item {
  overflow: hidden;
  border-radius: 2px;
  transition: transform 0.4s ease;
}

.inspired-link {
  display: block;
  width: 100%;
  height: 100%;
  text-decoration: none;
  cursor: pointer;
}

.inspired-item img {
  width: 100%;
  height: auto;
  aspect-ratio: 3 / 4;
  object-fit: cover;
  transition: transform 0.4s ease;
  display: block;
}

.inspired-item:hover img {
  transform: scale(1.05);
}

.inspired-placeholder {
  width: 100%;
  aspect-ratio: 3 / 4;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 2px;
  border: 1px dashed rgba(255, 255, 255, 0.3);
}

.inspired-placeholder p {
  color: rgba(255, 255, 255, 0.5);
  font-family: 'D-DIN', sans-serif;
  font-size: 14px;
  text-align: center;
  padding: 20px;
}

.get-inspired-empty {
  max-width: 1100px;
  margin: 60px auto 0;
  padding: 40px 20px;
  text-align: center;
}

.get-inspired-empty p {
  color: rgba(255, 255, 255, 0.6);
  font-family: 'D-DIN', sans-serif;
  font-size: 16px;
}

/* Estilos para el carrusel Slick */
.get-inspired-carousel .slick-slide {
  padding: 0 12.5px;
}

.get-inspired-carousel .slick-slide > div {
  position: relative;
  width: 100%;
  height: 100%;
}

.get-inspired-carousel .inspired-item {
  position: relative;
  width: 100%;
  margin: 0 auto;
}

.get-inspired-carousel .inspired-link {
  display: block;
  width: 100%;
  height: 100%;
  text-decoration: none;
  cursor: pointer;
  pointer-events: auto;
}

.get-inspired-carousel .inspired-item img {
  pointer-events: auto;
  cursor: pointer;
  display: block;
  width: 100%;
  height: auto;
  aspect-ratio: 3 / 4;
  object-fit: cover;
}

.get-inspired-carousel .slick-dots {
  bottom: -40px;
  z-index: 1;
}

.get-inspired-carousel .slick-dots li button:before {
  color: #fff;
  font-size: 12px;
  opacity: 0.5;
}

.get-inspired-carousel .slick-dots li.slick-active button:before {
  opacity: 1;
}

.get-inspired-carousel .slick-prev,
.get-inspired-carousel .slick-next {
  z-index: 10;
  width: 40px;
  height: 40px;
}

.get-inspired-carousel .slick-prev:before,
.get-inspired-carousel .slick-next:before {
  font-size: 30px;
  color: #fff;
  opacity: 0.8;
}

.get-inspired-carousel .slick-prev {
  left: 10px;
}

.get-inspired-carousel .slick-next {
  right: 10px;
}

.get-inspired-carousel .slick-prev:hover:before,
.get-inspired-carousel .slick-next:hover:before {
  opacity: 1;
}

/* === RESPONSIVE === */
@media (max-width: 992px) {
  .get-inspired {
    padding: 80px 0; /* menos alto en tablets */
  }

  .get-inspired-carousel {
    padding: 50px 20px 0;
  }

  .get-inspired-carousel .slick-slide {
    padding: 0 10px;
  }
}

@media (max-width: 768px) {
  .get-inspired-carousel {
    padding: 40px 15px 0;
  }

  .get-inspired-carousel .slick-slide {
    padding: 0 5px;
  }
}

@media (max-width: 600px) {
  .get-inspired {
    padding: 50px 0 60px; /* espacio abajo para los dots */
  }

  .get-inspired-title {
    font-size: 80px; /* tama침o fijo legible */
    margin-bottom: 0;
    padding: 0 20px;
  }

  .get-inspired-carousel {
    padding: 30px 0 0 !important;
    max-width: 100% !important;
  }

  .get-inspired-carousel .slick-list {
    margin: 0 !important;
    padding: 0 !important;
    overflow: visible;
  }

  .get-inspired-carousel .slick-track {
    display: flex !important;
    align-items: center;
  }

  .get-inspired-carousel .slick-slide {
    padding: 0 5px !important;
  }

  /* Ajustar dots del carrusel */
  .get-inspired-carousel .slick-dots {
    bottom: -40px !important;
    margin-top: 20px;
    position: relative;
  }

  /* Ajustar flechas del carrusel */
  .get-inspired-carousel .slick-prev {
    left: 10px !important;
    z-index: 10 !important;
  }

  .get-inspired-carousel .slick-next {
    right: 10px !important;
    z-index: 10 !important;
  }
}

/* ============================================
   ABOUT DESCONTINUADO
   ============================================ */

/* === SECCI칍N GENERAL === */
.about-descontinuado {
  width: 100%;
  background-color: #fff;
  color: #000;
}

.about-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  min-height: 80vh;
}

/* === COLUMNA DE TEXTO === */
.about-text {
  flex: 1 1 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 80px 100px;
}

.about-text h2 {
  font-family: 'Chivo-Medium', sans-serif; /* 游녣 t칤tulos */
  font-size: 32px;
  font-weight: 500;
  line-height: 1.3;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin-bottom: 25px;
}

.about-text p {
  font-family: 'D-DIN', sans-serif; /* 游녣 p치rrafos */
  font-size: 15px;
  line-height: 1.7;
  max-width: 440px;
  margin-bottom: 35px;
  color: #222;
}

/* === BOT칍N === */
.about-button {
  display: inline-block;
  font-family: 'D-DIN', sans-serif;
  border: 1px solid #000;
  padding: 10px 24px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: #000;
  text-decoration: none;
  transition: all 0.3s ease;
  cursor: pointer;
  width: auto;
  max-width: 200px;
  text-align: center;
}

.about-button:hover {
  background-color: #000;
  color: #fff;
}

/* === COLUMNA DE IMAGEN === */
.about-image {
  flex: 1 1 50%;
}

.about-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* === RESPONSIVE === */
@media (max-width: 1024px) {
  .about-text {
    padding: 60px 70px;
  }

  .about-text h2 {
    font-size: 28px;
  }
}

@media (max-width: 768px) {
  .about-container {
    flex-direction: column;
  }

  .about-text {
    padding: 60px 40px;
    text-align: center;
  }

  .about-text p {
    margin-left: auto;
    margin-right: auto;
  }

  .about-image {
    order: -1; /* Mueve la imagen arriba en mobile */
  }

  .about-button {
    margin: 20px auto 0;
  }
}

@media (max-width: 480px) {
  .about-text {
    padding: 50px 30px;
  }

  .about-text h2 {
    font-size: 24px;
  }

  .about-text p {
    font-size: 14px;
  }
}

