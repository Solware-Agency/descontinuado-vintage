  font-family: 'DIN-Light';
  src: url('{{ "DIN-Light.otf" | asset_url }}') format('opentype');
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Galgo';
  src: url('{{ "Galgo.otf" | asset_url }}') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Chivo-Medium';
  src: url('{{ "Chivo-Medium.ttf" | asset_url }}') format('truetype');
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'D-DIN';
  src: url('{{ "D-DIN.otf" | asset_url }}') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* ============================================
   HERO BANNER
   ============================================ */

/* Contenedor general que fuerza ancho completo */
.hero-banner-wrapper {
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  overflow: hidden;
}

/* Banner principal */
.hero-banner {
  position: relative;
  width: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #fff;
}

/* Contenedor del contenido */
.hero-content {
  z-index: 2;
  padding: 0 20px;
}

/* Texto principal/subtitle */
.hero-subtitle {
  font-family: 'DIN-Light', 'D-DIN', sans-serif;
  font-size: clamp(20px, 3vw, 26px);
  font-style: normal;
  font-weight: 300;
  margin-bottom: 25px;
  letter-spacing: 0.5px;
  color: #fff;
}

/* Bot√≥n */
.hero-button {
  display: inline-block;
  border: 1px solid #fff;
  padding: 10px 24px;
  font-size: 12px;
  font-family: 'D-DIN', sans-serif;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
  cursor: pointer;
}

.hero-button:hover {
  background-color: #fff;
  color: #000;
}

/* ============================================
   RESPONSIVE - HERO BANNER
   ============================================ */

@media (max-width: 768px) {
  .hero-banner {
    background-position: top center;
  }

  .hero-subtitle {
    font-size: 20px;
    margin-bottom: 20px;
  }

  .hero-button {
    padding: 9px 22px;
    font-size: 11px;
  }
}

@media (max-width: 480px) {
  .hero-subtitle {
    font-size: 18px;
  }
}

/* ============================================
   SERVICES ICONS
   ============================================ */

.custom-services {
  background-color: var(--services-bg-color, #F1F2F2);
  padding-top: var(--services-padding-top, 80px);
  padding-bottom: var(--services-padding-bottom, 80px);
  text-align: center;
}

.services-container {
  display: grid;
  grid-template-columns: repeat(var(--services-columns-desktop, 3), minmax(0, 1fr));
  gap: var(--services-gap, 80px);
  justify-items: center;
  align-items: stretch;
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 40px;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.service-item:hover {
  transform: translateY(-6px);
  opacity: 0.9;
}

.service-icon-wrapper {
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
}

.service-icon {
  width: 60px;
  height: auto;
}

.service-item h3 {
  font-family: 'D-DIN', sans-serif;
  font-size: 18px;
  font-weight: 700;
  letter-spacing: 1px;
  color: #231f20;
  text-transform: uppercase;
  margin: 0;
}

@media (max-width: 992px) {
  .services-container {
    grid-template-columns: repeat(var(--services-columns-tablet, 2), minmax(0, 1fr));
    gap: calc(var(--services-gap, 80px) * 0.75);
    padding: 0 30px;
  }

  .service-icon-wrapper {
    height: 70px;
  }
}

@media (max-width: 600px) {
  .custom-services {
    padding-top: calc(var(--services-padding-top, 80px) * 0.75);
    padding-bottom: calc(var(--services-padding-bottom, 80px) * 0.75);
  }

  .services-container {
    grid-template-columns: repeat(var(--services-columns-mobile, 1), minmax(0, 1fr));
    gap: calc(var(--services-gap, 80px) * 0.5);
    padding: 0 20px;
  }

  .service-icon-wrapper {
    height: 60px;
    margin-bottom: 15px;
  }

  .service-item h3 {
    font-size: 13px;
    letter-spacing: 0.8px;
  }
}

/* ============================================
   GET INSPIRED
   ============================================ */

.get-inspired {
  background-color: #000;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.get-inspired-title {
  font-family: 'Galgo', sans-serif;
  font-size: clamp(40px, 6vw, 80px);
  color: #fff;
  letter-spacing: 2px;
  text-transform: uppercase;
  line-height: 1.1;
  margin: 0;
  padding: 0;
}

.get-inspired-grid {
  display: grid;
  max-width: 1100px;
  margin: 0 auto;
  padding: 60px 30px 0;
}

.inspired-item {
  overflow: hidden;
  border-radius: 2px;
  transition: transform 0.4s ease;
}

.inspired-item img {
  width: 100%;
  height: auto;
  aspect-ratio: 3 / 4;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.inspired-item:hover img {
  transform: scale(1.05);
}

@media (max-width: 992px) {
  .get-inspired {
    padding-top: 80px;
    padding-bottom: 80px;
  }

  .get-inspired-grid {
    grid-template-columns: repeat(var(--inspired-columns-tablet, 2), 1fr);
    gap: 20px;
    padding: 50px 20px 0;
  }
}

@media (max-width: 600px) {
  .get-inspired {
    padding-top: 60px;
    padding-bottom: 60px;
  }

  .get-inspired-title {
    font-size: 40px;
    margin-bottom: 0;
  }

  .get-inspired-grid {
    grid-template-columns: 1fr !important;
    gap: 25px;
    padding: 40px 20px 0;
  }

  .inspired-item img {
    aspect-ratio: 4 / 5;
  }
}

/* ============================================
   ABOUT DESCONTINUADO
   ============================================ */

.about-descontinuado {
  width: 100%;
  background-color: #fff;
  color: #000;
}

.about-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  min-height: 80vh;
}

.about-text {
  flex: 1 1 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 80px 100px;
}

.about-text h2 {
  font-family: 'Chivo-Medium', sans-serif;
  font-size: 32px;
  font-weight: 500;
  line-height: 1.3;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin-bottom: 25px;
  white-space: pre-line;
}

.about-text p {
  font-family: 'D-DIN', sans-serif;
  font-size: 15px;
  line-height: 1.7;
  max-width: 440px;
  margin-bottom: 35px;
  color: #222;
}

.about-button {
  display: inline-block;
  font-family: 'D-DIN', sans-serif;
  border: 1px solid #000;
  padding: 10px 24px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: #000;
  text-decoration: none;
  transition: all 0.3s ease;
  cursor: pointer;
  width: auto;
  max-width: 200px;
  text-align: center;
}

.about-button:hover {
  background-color: #000;
  color: #fff;
}

.about-image {
  flex: 1 1 50%;
}

.about-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

@media (max-width: 1024px) {
  .about-text {
    padding: 60px 70px;
  }

  .about-text h2 {
    font-size: 28px;
  }
}

@media (max-width: 768px) {
  .about-container {
    flex-direction: column;
  }

  .about-text {
    padding: 60px 40px;
    text-align: center;
  }

  .about-text p {
    margin-left: auto;
    margin-right: auto;
  }

  .about-button {
    margin: 20px auto 0;
  }
}

@media (max-width: 480px) {
  .about-text {
    padding: 50px 30px;
  }

  .about-text h2 {
    font-size: 24px;
  }

  .about-text p {
    font-size: 14px;
  }
}

