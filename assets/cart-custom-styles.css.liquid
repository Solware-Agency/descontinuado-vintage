/* ============================================
   CART CUSTOM STYLES
   Estilos editables para el carrito de compras
   ============================================ */

/* Fuente D-DIN para el carrito */
@font-face {
  font-family: 'D-DIN';
  src: url('{{ "D-DIN.otf" | asset_url }}') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* Fuente Galgo para "OUR PIECES" */
@font-face {
  font-family: 'Galgo';
  src: url('{{ "Galgo.otf" | asset_url }}') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* Título del carrito */
.minicart .mini-content .mini-cart-head .title {
  font-family: 'D-DIN', sans-serif !important;
}

/* Contador del carrito */
.minicart .mini-content .mini-cart-head .mini-cart-counter {
  font-family: 'D-DIN', sans-serif !important;
}

/* Nombre del producto en el carrito */
.minicart .mini-content .prod .product-cart .minicart_item li .product-detail .product_name_mini a {
  font-family: 'D-DIN', sans-serif !important;
  text-transform: uppercase !important;
}

/* Detalles del producto (talla, color, etc.) */
.minicart .mini-content .prod .product-cart .minicart_item li .product-detail span {
  font-family: 'D-DIN', sans-serif !important;
}

/* Precio sin descuento */
.minicart .mini-content .prod .product-cart .minicart_item li .product-detail .product_info .price_nosale {
  font-family: 'D-DIN', sans-serif !important;
}

/* Cantidad (QTY) */
.minicart .mini-content .prod .product-cart .minicart_item li .product-detail .product_info .product_quanity {
  font-family: 'D-DIN', sans-serif !important;
}

/* Precio de venta */
.minicart .mini-content .prod .product-cart .minicart_item li .product-detail .product_info .price_sale {
  font-family: 'D-DIN', sans-serif !important;
}

/* Total - Título */
.minicart .mini-content .sub-total .total-title {
  font-family: 'D-DIN', sans-serif !important;
}

/* Total - Precio */
.minicart .mini-content .sub-total .total-price {
  font-family: 'D-DIN', sans-serif !important;
}

/* Botón "View Cart" */
.minicart .mini-content .action-checkout .button-viewcart {
  font-family: 'D-DIN', sans-serif !important;
}

/* Botón "Checkout" */
.minicart .mini-content .action-checkout .button-checkout {
  font-family: 'D-DIN', sans-serif !important;
}

/* ============================================
   PÁGINA COMPLETA DEL CARRITO (/cart)
   ============================================ */

/* Títulos de las columnas del carrito */
.page-cart .content-cart-page .shop_table .cart-title th {
  font-family: 'D-DIN', sans-serif !important;
}

/* Nombre del producto, precio y subtotal en la página del carrito */
.page-cart .content-cart-page .shop_table .cart_item .product-name-thumb,
.page-cart .content-cart-page .shop_table .cart_item .product-price,
.page-cart .content-cart-page .shop_table .cart_item .product-subtotal {
  font-family: 'D-DIN', sans-serif !important;
}

/* Input de cantidad en la página del carrito */
.page-cart .content-cart-page .shop_table .cart_item .product-quantity .js-qty input[type=text] {
  font-family: 'D-DIN', sans-serif !important;
}

/* Botones de actualizar carrito */
.page-cart .content-cart-page .cart_totals .cart-update input[type=submit] {
  font-family: 'D-DIN', sans-serif !important;
}

/* Botón continuar comprando */
.page-cart .content-cart-page .cart_totals .continue-shopping-1 a {
  font-family: 'D-DIN', sans-serif !important;
}

/* Título del resumen del carrito */
.page-cart .content-cart-page .cart_totals .cart-check .cart-title {
  font-family: 'D-DIN', sans-serif !important;
}

/* Etiquetas del total (Subtotal, Total, etc.) */
.page-cart .content-cart-page .cart_totals .cart-check .total-checkout .cart-label {
  font-family: 'D-DIN', sans-serif !important;
}

/* Montos del total */
.page-cart .content-cart-page .cart_totals .cart-check .total-checkout .cart-amount {
  font-family: 'D-DIN', sans-serif !important;
}

/* Botón de checkout en la página del carrito */
.page-cart .content-cart-page .cart_totals .cart-check .checkout-button {
  font-family: 'D-DIN', sans-serif !important;
}

/* ============================================
   TÍTULO "OUR PIECES" CON FUENTE GALGO
   ============================================ */

/* Aplicar fuente Galgo al título "OUR PIECES" en todas las secciones de productos */
.section-product-v1 .title_block h3,
.section-product-v2 .title_block h3,
.section-product-v3 .title_block h3,
.section-product-v4 .title_block h3,
.section-product-v5 .title_block h3,
.section-product-v6 .title_block h3 {
  font-family: 'Galgo', sans-serif !important;
  font-size: 72px !important;
}

/* Mayúsculas para nombres de productos en la página completa del carrito */
.page-cart .content-cart-page .shop_table .cart_item .product-name-thumb {
  text-transform: uppercase !important;
}

