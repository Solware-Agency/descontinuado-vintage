<!-- /sections/contact-template-descontinuado.liquid -->
<style>
  /* === Fuentes desde assets === */
  @font-face {
    font-family: 'Galgo';
    src: url('{{ "Galgo.woff2" | asset_url }}') format('woff2'),
         url('{{ "Galgo.woff" | asset_url }}') format('woff'),
         url('{{ "Galgo.otf" | asset_url }}') format('opentype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Chivo-Medium';
    src: url('{{ "Chivo-Medium.woff2" | asset_url }}') format('woff2'),
         url('{{ "Chivo-Medium.woff" | asset_url }}') format('woff'),
         url('{{ "Chivo-Medium.ttf" | asset_url }}') format('truetype');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'D-DIN';
    src: url('{{ "D-DIN.woff2" | asset_url }}') format('woff2'),
         url('{{ "D-DIN.woff" | asset_url }}') format('woff'),
         url('{{ "D-DIN.otf" | asset_url }}') format('opentype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  /* === Estilos del formulario === */
  .contact-form-descontinuado {
    max-width: 800px;
    margin: 0 auto;
    padding: 50px 0;
  }

  .contact-intro {
    margin-bottom: 30px;
  }

  .contact-intro p {
    font-family: 'D-DIN', sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    margin-bottom: 15px;
  }

  .contact-direct-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .contact-direct-item {
    flex: 1;
    min-width: 200px;
  }

  .contact-direct-item.left {
    text-align: left;
  }

  .contact-direct-item.right {
    text-align: right;
  }

  .contact-direct-label {
    font-family: 'Chivo-Medium', sans-serif;
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #000;
    margin-bottom: 5px;
  }

  .contact-direct-value {
    font-family: 'D-DIN', sans-serif;
    font-size: 16px;
    color: #333;
  }

  .contact-form-wrapper {
    margin-bottom: 50px;
  }

  .contact-form-field {
    margin-bottom: 25px;
  }

  .contact-form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 25px;
  }

  .contact-form-row-single {
    margin-bottom: 25px;
  }

  .contact-form-label {
    font-family: 'Chivo-Medium', sans-serif;
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #000;
    margin-bottom: 10px;
    display: block;
  }

  .contact-form-input,
  .contact-form-textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #000;
    background: #fff;
    font-family: 'D-DIN', sans-serif;
    font-size: 16px;
    color: #333;
    box-sizing: border-box;
  }

  .contact-form-textarea {
    min-height: 120px;
    resize: vertical;
  }

  .contact-form-input:focus,
  .contact-form-textarea:focus {
    outline: none;
    border-color: #000;
  }

  .contact-form-submit {
    margin-top: 30px;
  }

  .contact-submit-btn {
    width: 100%;
    background: #000;
    color: #fff;
    border: none;
    padding: 12px 40px;
    font-family: 'Chivo-Medium', sans-serif;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .contact-submit-btn:hover {
    opacity: 0.8;
  }

  .contact-bottom-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-top: 50px;
  }

  .contact-bottom-item h3 {
    font-family: 'Chivo-Medium', sans-serif;
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #000;
    margin-bottom: 15px;
  }

  .contact-bottom-item p {
    font-family: 'D-DIN', sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
  }

  .contact-alert {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid;
    font-family: 'D-DIN', sans-serif;
    font-size: 16px;
  }

  .contact-alert-success {
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
  }

  .contact-alert-error {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
  }

  @media (max-width: 768px) {
    .contact-direct-info {
      flex-direction: column;
      gap: 20px;
    }

    .contact-direct-item.right {
      text-align: left;
    }

    .contact-bottom-section {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .contact-form-row {
      grid-template-columns: 1fr;
      gap: 0;
    }
  }
</style>

<section class="page-contact-descontinuado">
  <div class="container">
    <div class="contact-form-descontinuado">
      
      <!-- Título Principal - Galgo -->
      <h1 class="text-center" style="font-family: 'Galgo', sans-serif; font-size: 72px; font-weight: 400; text-transform: uppercase; margin-bottom: 20px; letter-spacing: 2px; color: #000;">
        CONTÁCTANOS
      </h1>
      
      <!-- Texto introductorio -->
      <div class="contact-intro">
        <p>{{ section.settings.intro_text_1 | default: "Si quieres agendar una cita o tienes alguna duda, por favor rellena el formulario. Te responderemos lo más rápido que podamos." }}</p>
        <p>{{ section.settings.intro_text_2 | default: "También puedes contactarnos directamente por:" }}</p>
      </div>
      
      <!-- Información de contacto directo -->
      <div class="contact-direct-info">
        <div class="contact-direct-item left">
          <div class="contact-direct-label">EMAIL</div>
          <div class="contact-direct-value">
            <a href="mailto:{{ section.settings.contact_email | default: 'descontinuadovintage@gmail.com' }}" target="_blank" style="color: #333; text-decoration: none;">{{ section.settings.contact_email | default: "descontinuadovintage@gmail.com" }}</a>
          </div>
        </div>
        <div class="contact-direct-item right">
          <div class="contact-direct-label">WHATSAPP</div>
          <div class="contact-direct-value">
            {% assign whatsapp_number = section.settings.contact_whatsapp | default: "+584122150171" | replace: "+", "" | replace: " ", "" | replace: "-", "" %}
            <a href="https://wa.me/{{ whatsapp_number }}" target="_blank" style="color: #333; text-decoration: none;">{{ section.settings.contact_whatsapp | default: "+584122150171" }}</a>
          </div>
        </div>
      </div>
      
      <!-- Formulario de contacto -->
      <div class="contact-form-wrapper">
        {% form 'contact' %}
          
          {% if form.posted_successfully? %}
            <div class="contact-alert contact-alert-success">
              <p style="margin: 0;">¡Gracias por contactarnos! Te responderemos lo antes posible.</p>
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="contact-alert contact-alert-error">
              <p style="margin: 0 0 10px 0;"><strong>El formulario tiene errores. Por favor corrige lo siguiente:</strong></p>
              <ul style="margin: 0; padding-left: 20px;">
                {% for field in form.errors %}
                  <li>{{ field | capitalize | replace: 'Body', 'Mensaje' }}: {{ form.errors.messages[field] }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          <!-- Fila 1: NOMBRE y APELLIDO -->
          <div class="contact-form-row">
            <div class="contact-form-field">
              <label for="contactFormName" class="contact-form-label">NOMBRE</label>
              <input type="text" id="contactFormName" name="contact[name]" class="contact-form-input" required>
            </div>
            <div class="contact-form-field">
              <label for="contactFormLastName" class="contact-form-label">APELLIDO</label>
              <input type="text" id="contactFormLastName" name="contact[last_name]" class="contact-form-input" required>
            </div>
          </div>

          <!-- Fila 2: CORREO ELECTRÓNICO y NÚMERO DE TELÉFONO -->
          <div class="contact-form-row">
            <div class="contact-form-field">
              <label for="contactFormEmail" class="contact-form-label">CORREO ELECTRÓNICO</label>
              <input type="email" id="contactFormEmail" name="contact[email]" class="contact-form-input" required>
            </div>
            <div class="contact-form-field">
              <label for="contactFormPhone" class="contact-form-label">NÚMERO DE TELÉFONO</label>
              <input type="tel" id="contactFormPhone" name="contact[phone]" class="contact-form-input" required>
            </div>
          </div>

          <!-- Fila 3: MENSAJE (una sola columna) -->
          <div class="contact-form-row-single">
            <div class="contact-form-field">
              <label for="contactFormMessage" class="contact-form-label">MENSAJE</label>
              <textarea id="contactFormMessage" name="contact[body]" class="contact-form-textarea" required></textarea>
            </div>
          </div>

          <div class="contact-form-submit">
            <button type="submit" class="contact-submit-btn">ENVIAR</button>
          </div>

        {% endform %}
      </div>
      
      <!-- Línea separadora -->
      <hr style="border: none; border-top: 1px solid #000; margin: 30px 0; width: 100%;">
      
      <!-- Sección inferior -->
      <div class="contact-bottom-section">
        <div class="contact-bottom-item">
          <h3>{{ section.settings.appointment_title | default: "AGENDA UNA CITA" }}</h3>
          <p>
            {% assign whatsapp_number = section.settings.contact_whatsapp | default: "+584122150171" | replace: "+", "" | replace: " ", "" | replace: "-", "" %}
            {% assign whatsapp_link = "https://wa.me/" | append: whatsapp_number %}
            {% assign appointment_text = section.settings.appointment_text | default: "Rellena el formulario o contáctanos vía WhatsApp" %}
            {% if appointment_text contains "WhatsApp" %}
              {% assign text_parts = appointment_text | split: "WhatsApp" %}
              {{ text_parts[0] }}<a href="{{ whatsapp_link }}" target="_blank" style="color: #333; text-decoration: underline;">WhatsApp</a>{{ text_parts[1] }}
            {% else %}
              {{ appointment_text }}
            {% endif %}
          </p>
        </div>
        <div class="contact-bottom-item">
          <h3>{{ section.settings.showroom_title | default: "SHOWROOM" }}</h3>
          <p>{{ section.settings.showroom_text | default: "Estamos ubicados en Alto Hatillo Caracas, Venezuela." }}</p>
        </div>
      </div>
      
      <!-- Línea separadora final -->
      <hr style="border: none; border-top: 1px solid #000; margin: 30px 0; width: 100%;">
      
    </div>
  </div>
</section>

