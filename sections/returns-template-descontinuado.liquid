<style>
  /* === Fuentes desde assets === */
  @font-face {
    font-family: 'Galgo';
    src: url('{{ "Galgo.woff2" | asset_url }}') format('woff2'),
         url('{{ "Galgo.woff" | asset_url }}') format('woff'),
         url('{{ "Galgo.otf" | asset_url }}') format('opentype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Chivo-Medium';
    src: url('{{ "Chivo-Medium.woff2" | asset_url }}') format('woff2'),
         url('{{ "Chivo-Medium.woff" | asset_url }}') format('woff'),
         url('{{ "Chivo-Medium.ttf" | asset_url }}') format('truetype');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'D-DIN';
    src: url('{{ "D-DIN.woff2" | asset_url }}') format('woff2'),
         url('{{ "D-DIN.woff" | asset_url }}') format('woff'),
         url('{{ "D-DIN.otf" | asset_url }}') format('opentype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  /* === Estilos del acordeón === */
  .returns-accordion-item {
    border-bottom: 1px solid #000;
    padding: 20px 0;
  }

  .returns-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    padding: 0;
    background: none;
    border: none;
    width: 100%;
    text-align: left;
    font-family: 'Chivo-Medium', sans-serif;
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #000;
    transition: opacity 0.3s ease;
    line-height: 1.4;
    margin-bottom: 0;
  }
  
  .returns-question span:first-child {
    flex: 1;
  }

  .returns-question:hover {
    opacity: 0.7;
  }

  .returns-icon-wrapper {
    flex-shrink: 0;
    margin-left: 20px;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .returns-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .returns-icon-plus,
  .returns-icon-minus {
    display: none;
  }

  .returns-question[aria-expanded="false"] .returns-icon-plus {
    display: block;
  }

  .returns-question[aria-expanded="true"] .returns-icon-minus {
    display: block;
  }

  .returns-answer {
    font-family: 'D-DIN', sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    padding-top: 15px;
    padding-left: 0;
  }

  .returns-answer ul {
    margin: 10px 0;
    padding-left: 20px;
  }

  .returns-answer li {
    margin-bottom: 8px;
  }

  .returns-answer p {
    margin-bottom: 10px;
  }
</style>

