<section class="get-inspired" data-section-id="{{ section.id }}" data-section-type="get-inspired" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% if section.settings.title != blank %}
    <h2 class="get-inspired-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="get-inspired-grid" style="--inspired-gap: {{ section.settings.gap }}px; --inspired-columns-desktop: {{ section.settings.columns_desktop }}; --inspired-columns-tablet: {{ section.settings.columns_tablet }}; gap: var(--inspired-gap); grid-template-columns: repeat(var(--inspired-columns-desktop), 1fr);">
    {% for block in section.blocks %}
      <div class="inspired-item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | img_url: 'master' }}" 
            alt="{{ block.settings.alt_text | default: block.settings.image.alt | escape }}"
            loading="lazy"
          >
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Get Inspired",
  "settings": [
    {
      "type": "header",
      "content": "Contenido"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "GET INSPIRED"
    },
    {
      "type": "header",
      "content": "Diseño"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Espaciado entre imágenes",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 25
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columnas en desktop",
      "options": [
        {
          "value": "3",
          "label": "3 columnas"
        },
        {
          "value": "2",
          "label": "2 columnas"
        },
        {
          "value": "1",
          "label": "1 columna"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "columns_tablet",
      "label": "Columnas en tablet",
      "options": [
        {
          "value": "2",
          "label": "2 columnas"
        },
        {
          "value": "1",
          "label": "1 columna"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding superior",
      "min": 40,
      "max": 150,
      "step": 10,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding inferior",
      "min": 40,
      "max": 150,
      "step": 10,
      "unit": "px",
      "default": 100
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Texto alternativo",
          "info": "Si se deja vacío, se usará el texto alternativo de la imagen"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Get Inspired",
      "category": "Homepage",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

