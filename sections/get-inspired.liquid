  "name": "Get Inspired",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "GET INSPIRED"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Texto alternativo",
          "info": "Si se deja vacío, se usará el texto alternativo de la imagen"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Get Inspired",
      "category": "Homepage",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

